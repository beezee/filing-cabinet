<form action="/">
  <label>Search:</label>
  <input type="text" name="q" />
</form>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each_with_index do |document, index| %>
      <tr>
        <td><%= link_to(File.basename(document.attachment.path), document.attachment.url) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% if @hits && @hits[index] %>
      <tr>
        <td><%= raw @hits[index] %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

